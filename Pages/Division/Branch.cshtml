@page
@model spl.Pages.Division.BranchModel
@{
    ViewData["Title"] = "Daftar Bahagian";
    ViewData["CurrentMenu"] = "branch";
    Layout = Model.Layout;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="col-xl-12">
        <h6 class="text-muted">Daftar</h6>
        <div class="nav-align-top mb-4">
            <ul class="nav nav-tabs nav-fill" role="tablist">
                <li class="nav-item">
                    <button type="button"
                            id="btn-nav-branch"
                            class="nav-link active"
                            role="tab"
                            data-bs-toggle="tab"
                            data-bs-target="#navs-justified-branch"
                            aria-controls="navs-justified-branch"
                            aria-selected="true">
                        Bahagian
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button"
                            id="btn-nav-section"
                            class="nav-link"
                            role="tab"
                            data-bs-toggle="tab"
                            data-bs-target="#navs-justified-section"
                            aria-controls="navs-justified-section"
                            aria-selected="false">
                        Cawangan
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button"
                            id="btn-nav-unit"
                            class="nav-link"
                            role="tab"
                            data-bs-toggle="tab"
                            data-bs-target="#navs-justified-unit"
                            aria-controls="navs-justified-unit"
                            aria-selected="false">
                        Unit
                    </button>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="navs-justified-branch" role="tabpanel">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <h5 class="card-title text-primary">Senarai Bahagian</h5>
                        <a class='btn btn-primary' href='/division/addbranch'>Tambah</a>
                    </div>
                    <div class="table-responsive text-nowrap">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Nama Bahagian</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                @foreach(var item in Model.listBahagian)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.NamaBahagian</td>
                                            <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                    <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="/division/editbranch?id=@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Section -->
                <div class="tab-pane fade" id="navs-justified-section" role="tabpanel">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <h5 class="card-title text-primary">Senarai Cawangan</h5>
                        <a class='btn btn-primary' href='/division/addsection'>Tambah</a>
                    </div>
                    <div class="table-responsive text-nowrap">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Nama Bahagian</th>
                                    <th>Nama Cawangan</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0" id="section">
                           
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Unit -->
                <div class="tab-pane fade" id="navs-justified-unit" role="tabpanel">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <h5 class="card-title text-primary">Senarai Unit</h5>
                        <a class="btn btn-primary" href='/division/addunit'>Tambah</a>
                    </div>
                    <div class="table-responsive text-nowrap">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Nama Bahagian</th>
                                    <th>Nama Unit</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0" id="unit">
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#btn-nav-section").click(function () {
        $.ajax({
            type: 'GET',
            url: "/division/branch?handler=FetchSection",
            success: function (response) {
                console.log(response);
                if (response.success) {
                  const tbodyElement = document.querySelector("#section");
                  response.data.forEach(item => {
                    const newTrElement = document.createElement("tr");
                    newTrElement.innerHTML = `
                      <td>${tbodyElement.children.length + 1}</td>
                      <td>${item.bahagian.namaBahagian}</td>
                      <td>${item.namaCawangan}</td>
                      <td>
                        <div class="dropdown">
                          <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                          </button>
                          <div class="dropdown-menu">
                            <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                            <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                          </div>
                        </div>
                      </td>
                    `;
                    tbodyElement.appendChild(newTrElement);
                  });
              }
            },
        });
    });

    $("#btn-nav-unit").click(function () {
        $.ajax({
            type: 'GET',
            url: "/division/branch?handler=FetchUnit",
                        success: function (response) {
                console.log(response);
                if (response.success) {
                  const tbodyElement = document.querySelector("#unit");
                  response.data.forEach(item => {
                    const newTrElement = document.createElement("tr");
                    newTrElement.innerHTML = `
                      <td>${tbodyElement.children.length + 1}</td>
                      <td>${item.bahagian.namaBahagian}</td>
                      <td>${item.namaUnit}</td>
                      <td>
                        <div class="dropdown">
                          <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                          </button>
                          <div class="dropdown-menu">
                            <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                            <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                          </div>
                        </div>
                      </td>
                    `;
                    tbodyElement.appendChild(newTrElement);
                  });
              }
            },
        });
    });
</script>