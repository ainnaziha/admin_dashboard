@page
@model spl.Pages.Division.AddSectionModel
@{
    ViewData["Title"] = "Tambah Cawangan";
    ViewData["CurrentMenu"] = "branch";
    Layout = Model.Layout;
}

<div class="container-xxl flex-grow-1 container-p-y">

    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center">
                <h5 class="mb-0">Tambah Cawangan</h5>
            </div>
            <div class="card-body">
                <div id="error-toast" class="bs-toast toast fade bg-danger hide my-4" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <i class="bx bx-error me-2"></i>
                        <div class="me-auto fw-semibold">Daftar Tidak Berjaya</div>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body" id="error-msg"></div>
                </div>

                <form id="form-add-section">
                    <div class="mb-3">
                        <label class="form-label" for="bahagian">Nama Bahagian</label>
                        <select id="bahagian" name="cawangan.IdBahagian" class="select2 form-select" required>
                            <option value="" hidden>Pilih Bahagian</option>

                            @foreach (var item in Model.listBahagian)
                            {
                                <option value=@item.Id>@item.NamaBahagian</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="nama-cawangan">Nama Cawangan</label>
                        <input type="text" class="form-control" id="nama-cawangan" name="cawangan.NamaCawangan" placeholder="Sila isikan nama cawangan" required/>
                    </div>
                
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary me-2">Hantar</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="history.back()">Batal</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $('#form-add-section').submit(function (e) {
        e.preventDefault();

        $.ajax({
            type: 'POST',
            url: '/division/addsection?handler=CreateSection',
            data: $(this).serialize(),
            success: function (response) {
                if (response.success) {
                    window.location.href = '/division/branch';
                } else {
                    $('#error-toast').removeClass('hide').addClass('bs-toast toast fade bg-danger show my-4');
                    $('#error-msg').text(response.msg);
                }
            },
            error: function (xhr, status, error) {
                $('#error-toast').removeClass('hide').addClass('bs-toast toast fade bg-danger show my-4');
                $('#error-msg').text(error);
            }
        });
    })
</script>