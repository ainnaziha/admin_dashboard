@page
@model spl.Pages.Division.StationModel
@{
    ViewData["Title"] = "Daftar Stesen";
    ViewData["CurrentMenu"] = "station";
    Layout = Model.Layout;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card py-4 px-4">
        <div class="card-title d-flex align-items-start justify-content-between">
            <h5 class="card-title text-primary">Senarai Stesen</h5>
            <a class="btn btn-primary" href='/division/addstation'>Tambah</a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Nama Stesen</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @for (int index = 0; index < Model.listStesen.Count(); index++)
                    {
                     <tr>
                        <td>@(index + 1)</td>
                        <td>@Model.listStesen[index].NamaStesen</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>