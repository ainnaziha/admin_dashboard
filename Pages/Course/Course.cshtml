@page
@model spl.Pages.Course.CourseModel
@{
    ViewData["Title"] = "Daftar Kursus";
    ViewData["CurrentMenu"] = "course";
    Layout = Model.Layout;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card py-4 px-4">
        <div class="card-title d-flex align-items-start justify-content-between">
            <h5 class="card-title text-primary">Senarai Kursus</h5>
            <a class="btn btn-primary" href='/course/addcourse'>Tambah</a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Tajuk</th>
                        <th>Tarikh Mula</th>
                        <th>Tarikh Akhri</th>
                        <th>Lokasi</th>
                        <th>Kategori</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @for (int index = 0; index < Model.listKursus.Count(); index++)
                    {
                        <tr>
                            <td>@(index + 1)</td>
                            <td>@Model.listKursus[index].Tajuk</td>
                            <td>@Model.listKursus[index].TarikhMula</td>
                            <td>@Model.listKursus[index].TarikhAkhir</td>
                            <td>@Model.listKursus[index].Lokasi</td>
                            <td>@(Model.listKursus[index].KategoriKursus?.NamaKategori ?? "N/A")</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>